<Window x:Class="WimyGit.UI.QuestionWindow.QuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WimyGit.UI.QuestionWindow"
        mc:Ignorable="d"
        Title="QuestionWindow" Height="164" Width="358" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label x:Name="Question" Content="Question" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="338" Height="26"/>
        <TextBox x:Name="Answer" Margin="10,41,10,57" Text="Answer" TextWrapping="Wrap"/>
        <Button Content="OK" Margin="0,0,10,10" VerticalAlignment="Bottom" Height="32" HorizontalAlignment="Right" Width="114" Click="OnOK"/>
        <Button Content="Cancel" Margin="0,0,129,10" HorizontalAlignment="Right" Width="61" Height="32" VerticalAlignment="Bottom" Click="OnCancel"/>
    </Grid>
</Window>
